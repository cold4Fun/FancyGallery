<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/gallery_fragment">

    <fragment
        android:id="@+id/gallery_fragment"
        android:name="edu.vt.cs5254.gallery.GalleryFragment"
        android:label="GalleryFragment" >
        <action
            android:id="@+id/showPhoto"
            app:destination="@id/photoPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/map_fragment"
        android:name="edu.vt.cs5254.gallery.MapFragment"
        android:label="MapFragment" >
        <action
            android:id="@+id/showPhotoFromMarker"
            app:destination="@id/photoPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoPageFragment"
        android:name="edu.vt.cs5254.gallery.PhotoPageFragment"
        android:label="PhotoPageFragment" >
        <argument
            android:name="photoPageUri"
            app:argType="android.net.Uri" />
    </fragment>
</navigation>